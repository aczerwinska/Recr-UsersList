<h1>Listing users</h1>

<%= link_to 'Add', new_user_path %>


 
<table>
  <tr>
    <th><%= sort_link @search, :firstname, "Name" %></th>
    <th><%= sort_link @search, :surname, "Surname" %></th>
    <th><%= sort_link @search, :email, "Email" %></th>
    <th><%= sort_link @search, :password, "Password" %></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.firstname %></td>
      <td><%= user.surname %></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>